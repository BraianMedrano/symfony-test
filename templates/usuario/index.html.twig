{% extends 'base.html.twig' %}

{% block title %}Lista de usuarios{% endblock %}

{% block body %}
    <h1>Lista de usuarios</h1>

    {# Is defined en twig es similar al isset en php y lo que hace es verificar que la variable no sea nula #}
    {% if usuarios is defined %}
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.id }}</td>
                    <td>{{ usuario.nombre }}</td>
                    <td>{{ usuario.apellido }}</td>
                    <td>{{ usuario.edad }}</td>
                    <td>
                        <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}">show</a>
                        <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_usuario_new') }}">Create new</a>
        
    {% endif %}

{% endblock %}
